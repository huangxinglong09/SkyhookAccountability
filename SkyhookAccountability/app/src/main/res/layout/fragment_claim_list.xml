<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:name="toplev.com.skyhookaccountability.controller.claim.ClaimListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layoutManager="LinearLayoutManager"
        tools:context=".activity.claim.ClaimListFragment"
        tools:listitem="@layout/fragment_claim">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/claimListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

        <TextView
            android:id="@+id/placeholderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/claims_placeholder"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="17sp"
            android:paddingTop="150dp"
            android:textColor="@color/light_grey" />

    </FrameLayout>


</LinearLayout>

