<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/viewClaimHeader"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.claim.ClaimDetailActivity"
        android:background="@drawable/bordered_light_grey_view">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp">
        <ImageView
                android:id="@+id/iconImage"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/firm"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
        <TextView
                android:id="@+id/customerTexView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:text="ABC Customer"
                android:layout_alignEnd="@id/infoButton"
                android:layout_alignStart="@id/iconImage"
                android:paddingStart="45dp"
                android:paddingEnd="45dp"
                />
        <Button
                android:id="@+id/infoButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/info"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/firm"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
        <TextView
                android:id="@+id/iaFirmTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:text="IA firm"
                android:padding="10dp"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/phone"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
        <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:text="(239) 313-3114"
                android:padding="10dp"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/firm"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
        <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:text="123 ABC Street, West Palm, Florida 449134"
                android:padding="10dp"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/attachmentsTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:text="Attachements:"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/dueDateTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Due Date: 11/10/202"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                />
    </LinearLayout>



</LinearLayout>